# TELAS
#
<Screen_Login>:
    name: "login"
    FloatLayout:
        Fundo:
        #
        Label:
            text: "FAÇA SEU LOGIN"
            font_size: 30
            pos_hint: {'center_x':.5, 'center_y':.9}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        LabelVerificacao:
            id: verificacao_log_error
            font_size: 18
            halign: 'center'
            pos_hint: {'center_x':.5, 'center_y':.85}
        #
        Label:
            text: "Digite seu CPF"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.7}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: cpf_log
            hint_text: 'digite somente os números'
            size_hint: None, None
            size: 200, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.63}
        #
        LabelVerificacao:
            id: cpf_log_error
            pos_hint: {'center_x':.48, 'center_y':.58}
        #
        Label:
            text: "Digite sua senha"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.5}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: senha_log
            size_hint: None, None
            size: 200, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}
        #
        LabelVerificacao:
            id: senha_log_error
            pos_hint: {'center_x':.48, 'center_y':.38}
        #
        Button:
            text: "Entrar"
            size_hint: None, None
            size: 200, 40
            font_size: 20
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            background_color: 0.2, 0.8, 0.2, 1
            on_press: root.manager.transition.direction = 'left'
            on_release: root.informacoes_de_login(cpf_log.text, senha_log.text)
        #
        Button:
            text: "Cadastro"
            size_hint: None, None
            size: 200, 40
            font_size: 20
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
            background_color: 0.2, 0.2, 0.8, 1
            on_press: root.manager.transition.direction = 'right'
            on_release: app.root.current = 'cadastro'
        #
#
<Screen_Cadastro>:
